<UserControl x:Name="Control" x:Class="WpfApplication.Elements.BaseUIElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication.Elements"
             mc:Ignorable="d" Height="0" Width="0">
    <Canvas x:Name="Canvas">
        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
            <Image x:Name="ElementPicture" HorizontalAlignment="Center" Width="0" Height="0"/>
            <Label x:Name="ElementName" Content="Label" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Collapsed"/>
            <WrapPanel x:Name="PinsPanel" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical"></WrapPanel>
        </WrapPanel>
    </Canvas>
</UserControl>

<UserControl x:Class="WpfApplication.Elements.PinElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="Auto">
    <Canvas HorizontalAlignment="Left" Height="34" Margin="0" VerticalAlignment="Top" Width="100">
        <CheckBox PreviewMouseLeftButtonDown="PinEnterCheckBox_MouseDown" AllowDrop="True" Drop="PinDrop" x:Name="PinEnterCheckBox" Content="CheckBox" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Canvas>
</UserControl>
